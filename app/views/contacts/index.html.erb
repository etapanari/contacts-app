<h1>Showing all contacts</h1>

<table>
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Phone number</th>
            <th colspan="4">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @contacts.each do |contact|  %>
        <tr>
            <td><%= contact.first_name %></td>
            <td><%= contact.last_name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone_number %></td>

            <td><%= link_to 'Show', contact_path(contact) %></td>
            <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
            <td><%= link_to 'Delete', contact_path(contact.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
            <td><%= link_to 'History of edits', changes_contact_path(contact.id) %>  </td>
        </tr>
        <% end %>
    </tbody>

</table>

<p>
    <%= link_to 'Create new contact', new_contact_path%>
</p>
