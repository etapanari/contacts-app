<h1>Showing all contacts</h1>

<table>
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name name</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @contacts.each do |contact|  %>
        <tr>
            <td><%= contact.first_name %></td>
            <td><%= contact.last_name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone_number %></td>
            <td><%= link_to 'Show', contact_path(contact) %></td>
            <td><%= link_to 'Edit', contact_path(contact) %></td>
            <td><%= link_to 'Delete', contact_path(contact.id), method: :delete %></td>
        </tr>
        <% end %>
    </tbody>

</table>